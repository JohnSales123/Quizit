<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.quizit.controller.WelcomeSceneController">
    <children>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
            <children>
                <Label alignment="CENTER" layoutX="153.0" layoutY="119.0" style="&#10;" text="Wilkommen bei Quizit!" textAlignment="CENTER" textFill="#9f9f9f" wrapText="false">
                    <font>
                        <Font size="33.0" />
                    </font>
                </Label>
                <ButtonBar layoutX="235.0" layoutY="200.0">
                    <buttons>
                        <Button fx:id="scoreboardButton" mnemonicParsing="false" text="Scoreboard" textAlignment="CENTER"/>
                        <Button fx:id="playGameButton" contentDisplay="CENTER" mnemonicParsing="false" text="Spielen" textAlignment="CENTER" onAction="#startGame"/>
                    </buttons>
                    <effect>
                        <Blend />
                    </effect>
                </ButtonBar>
            </children>
        </AnchorPane>
    </children>
</VBox>
